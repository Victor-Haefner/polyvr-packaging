    <Script base_name="init" group="no group" name_space="__script__" name_suffix="0" persistency="666" server="server1" type="Python">
      <core>
	import VR
	
	if hasattr(VR, 'scene'): VR.scene.destroy()
	VR.scene = VR.Object('scene')
	VR.find('light').addChild( VR.scene )
	
	h1 = 0
	h2 = 20
	
	tg = VR.TextureGenerator()
	tg.setSize([64,64,1], True)
	#tg.setSize([60,30,1], True)
	tg.add('Perlin', 1, [0.7]*4, [1]*4 )
	tg.add('Perlin', 0.5, [0.5]*4, [1]*4 )
	tg.add('Perlin', 0.25, [0.2]*4, [1]*4 )
	tg.add('Perlin', 0.125, [0.5,0.7,0.2,h1], [0.5,0.7,0.2,h2] )
	tex = tg.compose(0)
	
	if 0:
		mat = VR.Material('mat')
		mat.setTexture(tex)
		box = VR.Geometry('box')
		box.setPrimitive('Box 1 1 1 1 1 1')
		box.setMaterial(mat)
		VR.scene.addChild(box)
	
	
	terrain = VR.Terrain('ground')
	terrain.setParameters([300,150],10)
	VR.scene.addChild(terrain)
	terrain.setMap(tex)
	#terrain.getMaterial().setWireFrame(1)
	
	red = VR.Material('red')
	red.setDiffuse([1,0,0])
	
	pole = VR.Geometry('pole')
	pole.setPrimitive('Cylinder 2 0.05 16 1 1 1')
	pole.translate([0,1,0])
	pole.applyTransformation()
	
	VR.flag = VR.Geometry('flag')
	VR.flag.setPrimitive('Plane 0.8 0.5 1 1')
	VR.flag.setMaterial(red)
	VR.flag.addChild(pole)
	VR.flag.translate([0.4,1.75,0])
	VR.flag.applyTransformation()
	
	
</core>
